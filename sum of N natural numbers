#include <stdio.h>
int add(int);
int main()
{
    int number;
    printf("enter a number");
    scanf("%d",&number);
    printf("the sum of first %d number is %d",number,sum(number));
    return 0;
}
int sum(int n)
{
    if(n==0)
    {
        return 0;
    }
    else
    {
        return n+sum(n-1);
    }
}

